<header class="header">
    <div>
        {{> logo}}      
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
<main class="main">
    {{#with main}}
        <img src="{{image}}" alt="Main image" class="main_image">
        <div class="main_content">
            <h1 class="main_heading">{{heading}}</h1>
            <p class="main_description">{{description}}</p>
            <a class="button main_button" href="{{href}}">{{button}}</a>
        </div>
    {{/with}}
</main>
<div class="featured">
    {{#each featured}}
       {{>cardFeatured data=this}}
    {{/each}}
</div>
    

<div class="actions">
    {{#each actions}}
        {{>formActions data=this}}
    {{/each}}
</div>
<footer class="footer">
    <div>
        {{> logo}} 
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div>
            <span class="footer_title">
                {{title}}
            </span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>

    
 
