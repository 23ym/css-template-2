<header class="header">
    <div>
        {{> logo}}      
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
        <div class="info_form">
           <h1 class="info_title">{{title}}</h1> 
           <p class="info_description">{{description}}</p>

        </div>
    {{/with}}
    {{#with form}}
        <form class="form_inputs">
            <div class="form_inputs_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}"/>
                 {{/each}}
            </div>
            
           <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
           </div>
             <button type="submit" class="form_button">{{button}}</button>

                <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>
<div class="recend">
    {{#with updates}}
        <div class="updates">
            <h6 class="updates_title">{{title}}</h6>
            <div class="block_upd">
                <div class="upd">
                    {{>svg_icon}}
                </div>
                <div class="recend_list">
                    {{#each list}}
                        <div class="upd_list">
                            <strong class="upd_username">{{nickname}}</strong>
                            <p class="upd_description">{{description}}</p>
                        </div> 
                    {{/each}}
                </div>
            </div>
            <div class="upd_link">
                {{#with show_all}}
                    <a href="{{url}}" class="updates_link">{{text}}</a>
                {{/with}}
            </div>
        </div>
    {{/with}}
</div>
<div class="expirience">
    {{#with expirience}}
        <badge class="expirience_badge">{{badge}}</badge>
        <div class="expirience_title">
            <strong>{{title}}</strong>
        </div>
        <div class="list">
            {{#each list}}
                <div>
                    <strong>{{name}}</strong>
                    <p>{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>
<footer class="footer">
    <div>
        {{> logo}} 
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div>
            <span class="footer_title">
                {{title}}
            </span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>

    
 
